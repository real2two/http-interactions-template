{
  "ui": "stream",
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local", ".env"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "cache": false
    },
    "start": {
      "cache": true,
      "persistent": true
    },
    "lint": {
      "outputs": []
    }
  }
}
